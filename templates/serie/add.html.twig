{% extends 'base.html.twig' %}

{% form_theme serieForm 'view/formTheme/formTheme.htlm.twig'%}

{% block title %}
    {{ parent() }} | Add
{% endblock %}

{% block body %}
    <h2>Add a new serie !</h2>
{#    declenche l'affichage du formulaire#}
    {{ form_start(serieForm) }}
    <div class="machin">
{#    {{ form(serieForm) }}#}
{#        decoupage par champs#}
        {{ form_label(serieForm.name) }}
        {{ form_widget(serieForm.name) }}
        {{ form_errors(serieForm.name) }}
    </div>
{#    affichage du reste du form#}
    {{ form_rest(serieForm) }}
    <button>Add serie !</button>
{#    fin du formulaire#}
    {{ form_end(serieForm) }}
{% endblock %}

